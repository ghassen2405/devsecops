<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="1000.0" style="-fx-background-color: black;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.FRONTafficherEvenement">

    <children>
        <!-- Titre de la page -->
        <Text text="Gestion des Événements" layoutX="350.0" layoutY="40.0" fill="GOLD" style="-fx-font-weight: bold;">
            <font>
                <Font size="26.0"/>
            </font>
        </Text>

        <!-- Zone de recherche et boutons de filtre + bouton de retour -->
        <HBox spacing="20" layoutX="40.0" layoutY="60.0">
            <!-- Champ de recherche avancée -->
            <TextField fx:id="searchField" promptText="Recherche avancée..." prefWidth="300" style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
            <!-- Bouton pour afficher tous les événements -->
            <Button fx:id="btnAll" text="Tous" style="-fx-background-color: gold; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 10;" prefWidth="100"/>
            <!-- Bouton pour filtrer sur les concerts -->
            <Button fx:id="btnConcert" text="Concert" style="-fx-background-color: darkgray; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" prefWidth="100"/>
            <!-- Bouton pour filtrer sur les fanmeets -->
            <Button fx:id="btnFanmeet" text="Fanmeet" style="-fx-background-color: darkgray; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" prefWidth="100"/>
            <!-- Bouton de retour -->
            <Button fx:id="backButton" text="Retour" style="-fx-background-color: darkgray; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 10;" prefWidth="100"/>
        </HBox>

        <!-- ScrollPane pour afficher les cartes d'événements -->
        <ScrollPane fx:id="scrollPane" layoutX="40.0" layoutY="100.0" prefHeight="620.0" prefWidth="920.0"
                    style="-fx-background: black; -fx-border-color: gold; -fx-border-width: 2;">
            <content>
                <TilePane fx:id="tilePane" hgap="25" vgap="25" prefHeight="600.0" prefWidth="880.0"
                          style="-fx-background-color: black;"/>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
