<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="311.0" prefWidth="399.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AjouterPanier">
    <children>
        <VBox layoutX="50.0" layoutY="20.0" spacing="20.0">
            <children>
                <VBox spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="ID Produit" />
                    <TextField fx:id="idProduit" prefWidth="200.0" style="-fx-background-color: #333333; -fx-text-fill: white;" />
                </VBox>

                <VBox spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="ID Utilisateur" />
                    <TextField fx:id="idUser" prefWidth="200.0" style="-fx-background-color: #333333; -fx-text-fill: white;" />
                </VBox>

                <VBox spacing="10.0">
                    <Label style="-fx-text-fill: white;" text="Nombre de Produits" />
                    <TextField fx:id="nbrProduit" prefWidth="200.0" style="-fx-background-color: #333333; -fx-text-fill: white;" />
                </VBox>
            </children>
        </VBox>

        <Button fx:id="ajoutPanier" layoutX="63.0" layoutY="253.0" onAction="#ajout" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color: #FFEB3B; -fx-text-fill: black; -fx-font-weight: bold;" text="Ajouter Panier">
            <style>
                .button:hover {
                -fx-background-color: #000000;
                -fx-text-fill: #FFEB3B;
                }
            </style>
        </Button>
        <Button fx:id="afficherPaniers" layoutX="218.0" layoutY="253.0" onAction="#afficherPaniers" prefHeight="26.0" prefWidth="114.0" style="-fx-background-color: #FFEB3B; -fx-text-fill: black; -fx-font-weight: bold;" text="Afficher Paniers">
            <style>
                .button:hover {
                -fx-background-color: #000000;
                -fx-text-fill: #FFEB3B;
                }
            </style>
        </Button>
    </children>
</AnchorPane>