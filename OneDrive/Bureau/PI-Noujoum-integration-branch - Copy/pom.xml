    <build>
        <plugins>
            <!-- JavaFX Maven Plugin -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>main.MainFx</mainClass>
                    <options>
                        <option>--module-path</option>
                        <option>${java.home}/lib/javafx-sdk-21/lib</option> <!-- Path to JavaFX SDK -->
                        <option>--add-modules</option>
                        <option>javafx.controls,javafx.fxml,javafx.web</option> <!-- Added javafx.web -->
                    </options>
                </configuration>
            </plugin>
        </plugins>
