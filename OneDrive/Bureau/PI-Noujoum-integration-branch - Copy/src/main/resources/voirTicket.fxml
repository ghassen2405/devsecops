<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.voirTicket"
            style="-fx-background-color: #121212; -fx-padding: 20;">

    <!-- Titre -->
    <Label text="Mes Tickets" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"
           layoutX="20" layoutY="10"/>

    <!-- Conteneur des tickets dans un ScrollPane -->
    <ScrollPane layoutX="20" layoutY="50" prefWidth="500" prefHeight="600" fitToWidth="true" style="-fx-background-color: transparent;">
        <content>
            <VBox fx:id="ticketContainer" spacing="10" style="-fx-background-color: transparent;"/>
        </content>
    </ScrollPane>
</AnchorPane>
