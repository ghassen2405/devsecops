<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="900.0" prefWidth="1300.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.afficheproduitcontroller">

    <children>

        <!-- VBox principal pour centrer le contenu -->
        <VBox alignment="CENTER" prefHeight="900.0" prefWidth="1300.0" spacing="20">

            <!-- ScrollPane pour afficher le TilePane -->
            <ScrollPane fx:id="scrollPane" prefHeight="678.0" prefWidth="1139.0" style="-fx-background: black; -fx-border-color: gold; -fx-border-width: 2;">
                <content>
                    <!-- TilePane pour afficher 3 produits par ligne -->
                    <TilePane fx:id="productTilePane" alignment="CENTER" hgap="25" prefColumns="3" style="-fx-background-color: black; -fx-padding: 20;" vgap="25">
                        <!-- Les cartes produits seront ajoutées dynamiquement depuis le contrôleur -->
                    </TilePane>
                </content>
            </ScrollPane>

        </VBox>

        <!-- Titre centré -->
        <Text fill="GOLD" style="-fx-font-weight: bold;" text="Gestion des Produits">
            <font>
                <Font size="30.0" />
            </font>
        </Text>

    </children>
</AnchorPane>

