<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.addusercontroller">
   <children>
      <Pane layoutX="50.0" layoutY="32.0" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: black; -fx-border-color: gold; -fx-border-width: 2px; -fx-border-radius: 10px;">
         <children>
            <!-- Labels stylisés -->
            <Label layoutX="49.0" layoutY="90.0" styleClass="label" text="Nom :" />
            <Label layoutX="49.0" layoutY="140.0" styleClass="label" text="Prénom :" />
            <Label layoutX="48.0" layoutY="190.0" styleClass="label" text="Email :" />
            <Label layoutX="50.0" layoutY="240.0" styleClass="label" text="Mot de passe :" />
            <Label layoutX="55.0" layoutY="290.0" styleClass="label" text="Téléphone :" />
            <Label layoutX="61.0" layoutY="341.0" styleClass="label" text="Rôle :" />

            <!-- Champs de texte stylisés -->
            <TextField fx:id="id_nom" layoutX="160.0" layoutY="85.0" promptText="Entrez votre nom" styleClass="text-field" />
            <TextField fx:id="id_prenom" layoutX="160.0" layoutY="135.0" promptText="Entrez votre prénom" styleClass="text-field" />
            <TextField fx:id="id_mail" layoutX="160.0" layoutY="185.0" promptText="Entrez votre email" styleClass="text-field" />
            <TextField fx:id="id_mdp" layoutX="160.0" layoutY="235.0" promptText="Entrez votre mot de passe" styleClass="text-field" />
            <TextField fx:id="id_tel" layoutX="160.0" layoutY="285.0" promptText="Entrez votre téléphone" styleClass="text-field" />
            <ComboBox fx:id="idrole" layoutX="160.0" layoutY="332.0" promptText="Sélectionnez un rôle" styleClass="combo-box" />

            <!-- ImageView et Bouton pour choisir une image -->
            <Label layoutX="400.0" layoutY="31.0" styleClass="label" text="Photo de profil :" />
            <ImageView fx:id="profileImage" fitHeight="120.0" fitWidth="120.0" layoutX="400.0" layoutY="60.0" />
            <Button fx:id="browseImage" layoutX="366.0" layoutY="177.0" mnemonicParsing="false" onAction="#browseImageAction" styleClass="button" text="Choisir une image" />

            <!-- Boutons stylisés avec espacement -->
            <Button fx:id="id_ajout" layoutX="108.0" layoutY="399.0" mnemonicParsing="false" onAction="#addUser" styleClass="button" text="Créer compte" />
         </children>
      </Pane>
   </children>
</AnchorPane>
