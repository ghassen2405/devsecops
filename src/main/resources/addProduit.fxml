<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.addproduitcontroller" style="-fx-background-color: #1E1E1E;">
   <children>
      <!-- Label et champ de texte pour "Nom" -->
      <Label layoutX="52.0" layoutY="50.0" text="Nom" style="-fx-text-fill: white;"/>
      <TextField fx:id="nom" layoutX="130.0" layoutY="50.0" prefWidth="600.0" style="-fx-background-radius: 10px; -fx-font-size: 14px; -fx-padding: 5px; -fx-background-color: #333333; -fx-text-fill: white;"/>

      <!-- Label et TextArea pour "Description" -->
      <Label layoutX="52.0" layoutY="100.0" text="Description" style="-fx-text-fill: #eadbdb;"/>
      <TextArea fx:id="description" layoutX="130.0" layoutY="100.0" prefHeight="100.0" prefWidth="600.0" style="-fx-background-radius: 10px; -fx-font-size: 14px; -fx-padding: 5px; -fx-background-color: #333333; -fx-text-fill: #0e0606;"/>

      <!-- Label et champ de texte pour "Prix" -->
      <Label layoutX="52.0" layoutY="210.0" text="Prix" style="-fx-text-fill: white;"/>
      <TextField fx:id="prix" layoutX="130.0" layoutY="210.0" prefWidth="600.0" style="-fx-background-radius: 10px; -fx-font-size: 14px; -fx-padding: 5px; -fx-background-color: #333333; -fx-text-fill: white;"/>

      <!-- Label et ComboBox pour "Catégorie" -->
      <Label layoutX="52.0" layoutY="270.0" text="Catégorie" style="-fx-text-fill: white;"/>
      <ComboBox fx:id="categorieComboBox" layoutX="130.0" layoutY="270.0" prefWidth="600.0" style="-fx-background-radius: 10px; -fx-font-size: 14px; -fx-background-color: #333333; -fx-text-fill: white;"/>

      <!-- Label et champ de texte pour "Disponibilité" -->
      <Label layoutX="52.0" layoutY="320.0" text="Disponibilité" style="-fx-text-fill: white;"/>
      <TextField fx:id="disponibilite" layoutX="130.0" layoutY="320.0" prefWidth="600.0" style="-fx-background-radius: 10px; -fx-font-size: 14px; -fx-padding: 5px; -fx-background-color: #333333; -fx-text-fill: white;"/>

      <!-- Section d'insertion d'image -->
      <Label layoutX="52.0" layoutY="370.0" text="Image" style="-fx-text-fill: white;"/>
      <ImageView fx:id="image" fitHeight="150.0" fitWidth="200.0" layoutX="375.0" layoutY="370.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: gold; -fx-border-radius: 10px;"/>
      <Button fx:id="browseImage" layoutX="400.0" layoutY="520.0" text="Parcourir Image" style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 10px;" onAction="#browseImageAction"/>

      <!-- Boutons d'action -->
      <Button fx:id="ajout" layoutX="475.0" layoutY="570.0" text="Ajouter" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px;" onAction="#ajout"/>
      <Button fx:id="affich" layoutX="395.0" layoutY="570.0" text="Afficher" style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 10px;" onAction="#Afficher"/>
      <Button fx:id="ajoutPromotion" layoutX="150.0" layoutY="570.0" text="Ajouter Promotion" style="-fx-background-color: #FF4500; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px;" onAction="#ajoutPromotion"/>
   </children>
</AnchorPane>
