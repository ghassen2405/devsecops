        <Label text="Modifier Ticket" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <!-- Prix Field -->
        <HBox spacing="10">
            <Label text="Prix:"/>
            <TextField fx:id="prixField" promptText="Entrez le prix" />
        </HBox>

        <!-- Methode Paiement ComboBox -->
        <HBox spacing="10">
