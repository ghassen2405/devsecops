        <TextField fx:id="nom" layoutX="130.0" layoutY="75.0" />
        <TextField fx:id="disponibilite" layoutX="130.0" layoutY="299.0" />

        <Label layoutX="52.0" layoutY="79.0" text="Nom" />
        <Label layoutX="52.0" layoutY="120.0" text="Description" />
        <Label layoutX="300.0" layoutY="71.0" text="Image" />
        <Label layoutX="53.0" layoutY="303.0" text="Disponibilité" />

