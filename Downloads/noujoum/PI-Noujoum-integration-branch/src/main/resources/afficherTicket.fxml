<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/17.0.1"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.afficherTicket"
      prefWidth="600" prefHeight="500"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20px;">

    <children>
        <!-- Titre -->
        <Label text="Liste des Tickets"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <!-- Bouton d'action -->
        <HBox alignment="CENTER">
            <Button text="Ajouter Ticket" onAction="#handleTestButton"
                    style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 14px;" />
        </HBox>

        <!-- Conteneur Scrollable pour les Tickets -->
        <ScrollPane fitToWidth="true" prefHeight="380"
                    style="-fx-background: white; -fx-border-color: #ccc; -fx-border-radius: 5px;">
            <VBox fx:id="ticketContainer"
                  spacing="10" alignment="TOP_CENTER"
                  style="-fx-padding: 10px;">
                <!-- Les tickets seront ajoutÃ©s dynamiquement ici -->
            </VBox>
        </ScrollPane>
    </children>
</VBox>
