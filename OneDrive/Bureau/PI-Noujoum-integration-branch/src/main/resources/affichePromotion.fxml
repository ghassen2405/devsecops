<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #2E2E2E, #000000);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.afficherpromotioncontroller">
    <children>
        <!-- ScrollPane for dynamic content -->
        <ScrollPane fx:id="scrollPane" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" style="-fx-background-color: #181818;">
                    <children>
                        <!-- Dynamic content displayed in the TilePane -->
                        <TilePane fx:id="promoTilePane" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>

        <!-- Action Buttons -->
        <Button fx:id="ajout" AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="10.0" text="Ajouter" style="-fx-background-color: #FDD700; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold;" onAction="#ajout" />
        <Button fx:id="affich" AnchorPane.leftAnchor="120.0" AnchorPane.bottomAnchor="10.0" text="Afficher Produit" style="-fx-background-color: #FDD700; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold;" onAction="#affich" />
        <Button fx:id="update" AnchorPane.leftAnchor="250.0" AnchorPane.bottomAnchor="10.0" text="Mettre Ã  jour" style="-fx-background-color: #FDD700; -fx-text-fill: black; -fx-font-size: 14px; -fx-font-weight: bold;" onAction="#update" />
    </children>
</AnchorPane>
