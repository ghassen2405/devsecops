<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="ticketCard" fx:controller="Controllers.TicketCardController"
            style="-fx-background-color: #222; -fx-border-color: #FFD700; -fx-border-width: 2; -fx-border-radius: 10; -fx-padding: 10;">

    <VBox spacing="10" alignment="CENTER">
        <!-- Event Name -->
        <Label fx:id="eventNameLabel" text="Nom de l'événement"
               style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- Artist -->
        <Label fx:id="artistLabel" text="Artiste : Inconnu"
               style="-fx-font-size: 14px; -fx-text-fill: white;"/>

        <!-- Price & Quantity -->
        <HBox spacing="15" alignment="CENTER">
            <Label fx:id="priceLabel" text="Prix: 50 TND"
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            <Label fx:id="quantityLabel" text="Quantité: 2"
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
        </HBox>

        <!-- QR Code -->
        <ImageView fx:id="qrCodeImageView" fitWidth="120" fitHeight="120"
                   style="-fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 5;"/>

        <!-- Download PDF Button -->
        <Button fx:id="downloadButton" text="Télécharger PDF"
                style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-weight: bold;"
                onAction="#downloadTicket"/>
    </VBox>
</AnchorPane>
