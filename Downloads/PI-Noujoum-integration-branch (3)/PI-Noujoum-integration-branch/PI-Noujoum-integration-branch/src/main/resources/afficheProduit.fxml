<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.TilePane?>

<AnchorPane prefHeight="1000.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.afficheproduitcontroller">
    <children>
        <ScrollPane fx:id="scrollPane" layoutX="41.0" layoutY="34.0" prefHeight="600.0" prefWidth="920.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="500.0" prefWidth="900.0">
                    <children>
                        <!-- TilePane avec un fond sombre et espacement modifié -->
                        <TilePane fx:id="promoTilePane" hgap="25" layoutX="-34.0" prefHeight="1000.0" prefWidth="1000.0" style="-fx-background-color: #121212;" vgap="30">
                        </TilePane>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>

        <!-- Boutons ajout et update dans une disposition plus ordonnée -->
        <Button fx:id="ajout" layoutX="760.0" layoutY="670.0" mnemonicParsing="false" onAction="#ajout" style="-fx-background-color: #FFD700; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Ajouter un produit" />
        <Button fx:id="update" layoutX="630.0" layoutY="670.0" mnemonicParsing="false" onAction="#update" style="-fx-background-color: #FFD700; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" text="Mettre à jour" />
    </children>
</AnchorPane>
