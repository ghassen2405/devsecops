<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" alignment="CENTER" stylesheets="@styles.css" prefWidth="800" prefHeight="600" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Acceuil">

    <padding><Insets top="30" left="30" right="30" bottom="30"/></padding>

    <!-- Titre principal -->
    <Text text="Bienvenue sur Noujoum" style="-fx-font-size: 24px; -fx-fill: gold; -fx-font-weight: bold;"/>

    <!-- Boutons stylisés -->
    <Button text="Gérer les Utilisateurs" onAction="#handleAjouterUser" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #1A1A1A; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5px;"/>
    <Button text="Organiser un Événement" onAction="#handleAjouterEvenement" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #1A1A1A; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5px;"/>
    <Button text="Accéder au Panier" onAction="#handleAjouterPanier" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #1A1A1A; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5px;"/>
    <Button text="Explorer les Produits" onAction="#handleAjouterProduit" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #1A1A1A; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5px;"/>
</VBox>
