    </HBox>

    <!-- Main Content -->
    <VBox layoutX="100.0" layoutY="120.0" spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: black;"
          AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="120.0">

        <!-- Title -->
        <Text text="Panier" fill="GOLD" style="-fx-font-weight: bold;" fontSmoothingType="GRAY">
            <font>
                <Font size="26.0"/>
            </font>
        </Text>

        <!-- GridPane for cart data -->
        <GridPane fx:id="gridPaniers" hgap="10" vgap="10" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;">
            <!-- The cart data will be added dynamically here -->
